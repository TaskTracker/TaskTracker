<Window x:Class="PMgo.viewDoc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Document View" Height="655" Width="603" WindowStartupLocation="CenterScreen" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="107*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="docName" HorizontalAlignment="Left" Height="31" Margin="38,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Grid.Column="1"/>
        <TextBlock x:Name="docDesc" HorizontalAlignment="Left" Height="79" Margin="38,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="288" Grid.Column="1"/>
        <TextBox x:Name="docText" HorizontalAlignment="Left" Height="400" Margin="38,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="428" Grid.Column="1"/>
        <TextBox x:Name="locationBox" Grid.Column="1" HorizontalAlignment="Left" Height="31" Margin="336,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189" Visibility="Hidden"/>

    </Grid>
</Window>
