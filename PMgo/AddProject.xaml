<Window x:Class="PMgo.AddProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add a Project" Height="580" Width="1150" WindowStartupLocation="CenterScreen" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
    <Grid Margin="0,0,2,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="163*"/>
            <ColumnDefinition Width="679*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="projNameField" HorizontalAlignment="Left" Height="41" Margin="5,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="329" Grid.Column="2" FontSize="18"/>
        <DatePicker x:Name="startField" HorizontalAlignment="Left" Margin="5,189,0,0" VerticalAlignment="Top" Width="203" Height="41" Grid.Column="2" FontSize="18"/>
        <TextBox x:Name="descriptionField" HorizontalAlignment="Left" Height="122" Margin="5,281,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="329" Grid.Column="2" FontSize="18"/>
        <DatePicker x:Name="endField" HorizontalAlignment="Left" Margin="5,235,0,0" VerticalAlignment="Top" Width="203" Height="41" Grid.Column="2" FontSize="18"/>
        <Label Content="Add A Project" HorizontalAlignment="Left" VerticalAlignment="Top" Width="396" Height="61" FontSize="36" Grid.Column="2" Margin="10,28,0,0" FontFamily="Segoe UI Light"/>
        <ComboBox x:Name="pmBox" HorizontalAlignment="Left" Margin="5,141,0,0" VerticalAlignment="Top" Width="329" Height="41" Grid.Column="2" SelectionChanged="ComboBox_SelectionChanged_1" FontSize="18"/>
        <Label Content="Project Name" HorizontalAlignment="Left" Margin="1,95,0,0" VerticalAlignment="Top" Height="41" Width="138" FontSize="20" Grid.Column="1"/>
        <Label Content="Project Manager" HorizontalAlignment="Left" Margin="1,141,0,0" VerticalAlignment="Top" Height="41" Width="165" FontSize="20" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Label Content="Start Date" HorizontalAlignment="Left" Margin="2,187,0,0" VerticalAlignment="Top" Height="41" Width="103" FontSize="20" Grid.Column="1"/>
        <Label Content="Estimated End" HorizontalAlignment="Left" Margin="1,235,0,0" VerticalAlignment="Top" Height="41" Width="138" FontSize="20" Grid.Column="1"/>
        <Label Content=" Description" HorizontalAlignment="Left" Margin="0,281,0,0" VerticalAlignment="Top" Height="41" Width="124" FontSize="20" Grid.Column="1"/>
        <Button Content="Add Project" Grid.Column="2" HorizontalAlignment="Left" Margin="10,419,0,0" VerticalAlignment="Top" Width="165" Height="51" FontSize="18" Click="Button_Click_1"/>
        <ListBox x:Name="projListBox" Grid.Column="2" HorizontalAlignment="Left" Height="375" Margin="465,95,0,0" VerticalAlignment="Top" Width="328" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" Foreground="Black" SelectionChanged="ListBox_SelectionChanged_1" FontSize="18">
            <ListBox.Effect>
                <DropShadowEffect/>
            </ListBox.Effect>
        </ListBox>
        <Label Content="Current Projects" Grid.Column="2" HorizontalAlignment="Left" Margin="497,31,0,0" VerticalAlignment="Top" Width="262" Height="61" FontSize="36" FontFamily="Segoe UI Light"/>
        <Button Content="Cancel" Grid.Column="2" HorizontalAlignment="Left" Margin="198,421,0,0" VerticalAlignment="Top" Width="165" Height="51" FontSize="18" Click="Button_Click_2" />
        <TextBlock x:Name="current_txt" Grid.Column="1" HorizontalAlignment="Left" Height="21" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171" FontSize="18" FontFamily="Segoe UI Light" FontWeight="Bold" Foreground="#FFFB0C0C" Visibility="Hidden">
            <TextBlock.Effect>
                <DropShadowEffect Color="#FFFBF5F5"/>
            </TextBlock.Effect>
        </TextBlock>

    </Grid>
</Window>
